doctype html
html(lang="ja")
  head
    include _head.pug
    -var title = "Language Setting"
    title #{title}
    link(rel="stylesheet", href="css/languageSetting.css")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet")
  body
    img.mainImg(src="../img/language.svg", alt="translate img")

    .languageSelection
        .english
            img(src="img/english.svg", alt="england flag img")
            h1 ENGLISH 
        
        
        .japan 
            img(src="img/japan.svg", alt="japan flag img")
            h1 JAPANESE




doctype html
html(lang="ja")
  head
    include _head.pug
    -var title = "sign in"
    title #{title}
    link(rel="stylesheet", href="css/signInPage.css")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet")
  body
    //- img(src="img/create_account_visual.svg", alt="visual of create account")
    .question 
        form(action="" method="post")

            //-username
            label(for="username") 
            input(type="text" id="name" name="name" placeholder="name")

            //-date of birth
            .dateOfBirth 
                label(for="year")
                input(type="text" id="year" name="year" placeholder="2000")

                label(for="month") Month
                input(type="text" id="month" name="month" placeholder="12")

                label(for="day") Day
                input(type="text" id="day" name="day" placeholder="01")

            //-sex
            label(for="sex") Sex
            select#sex(name="sex") 
                option(value="male") Male
                option(value="female") Female  

            //-email
            label(for="email") Email
            input(type="text" id="email" name="email")

            //-password
            label(for="password") Password
            input(type="text"  id="password" name="password") 


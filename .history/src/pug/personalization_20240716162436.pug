doctype html
html(lang="ja")
  head
    include _head.pug
    -var title = "sign in"
    title #{title}
    link(rel="stylesheet", href="css/signInPage.css")
    link(rel="preconnect" href="https://fonts.googleapis.com")
    link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=Barlow:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet")

  body
    .container
      .form-container
        .header
          h1 Create Account
        form
          .input-group
            label(for="name") Name
            input(type="text" id="name" name="name" required)
          .input-group
            label Birthday
            .birthday-inputs
              input(type="text" placeholder="Year" name="year" required)
              input(type="text" placeholder="Month" name="month" required)
              input(type="text" placeholder="Day" name="day" required)
          .input-group
            label(for="sex") Sex
            select(id="sex" name="sex" required)
              option(value="" disabled selected) Select your sex
              option(value="male") Male
              option(value="female") Female
          .input-group
            label(for="email") Email address
            input(type="email" id="email" name="email" required)
          .input-group
            label(for="password") Password
            input(type="password" id="password" name="password" required)
          button(type="submit") Submit

        
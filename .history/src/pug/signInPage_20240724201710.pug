body
  .container
    .form-container
      .header
        h1 Create Account
      form(action="/nextPage" method="POST" id="createAccountForm")
        .input-group
          label(for="name") Name
          input(type="text" id="name" name="name" required)
        .input-group
          label Birthday
          .birthday-inputs
            input(type="text" placeholder="Year" name="year" required)
            input(type="text" placeholder="Month" name="month" required)
            input(type="text" placeholder="Day" name="day" required)
        .input-group
          label(for="sex") Sex
          select(id="sex" name="sex" required)
            option(value="" disabled selected) Select your sex
            option(value="male") Male
            option(value="female") Female
        .input-group
          label(for="email") Email address
          input(type="email" id="email" name="email" required)
        .input-group
          label(for="password") Password
          input(type="password" id="password" name="password" required)
        button(type="submit") Submit

  script.
    document.getElementById('createAccountForm').addEventListener('submit', function(event) {
      event.preventDefault();
      window.location.href = 'personalization.html';
    });
